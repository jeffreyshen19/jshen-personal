    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name = "description" content = "Personal website of Jeffrey Shen, a developer and student at Phillips Academy.")
    meta(name = "author" content = "Jeffrey Shen")
    title Jeffrey Shen
    link(href='Assets/bower_components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet', type='text/css')
    link(href='Assets/bower_components/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    link(href='dist/CSS/main.css', rel='stylesheet', type='text/css')
    script(src='Assets/bower_components/jquery/dist/jquery.min.js')
    script(src='Assets/bower_components/bootstrap/dist/js/bootstrap.min.js')
    script(src='dist/main-min.js')
  body
    header
      nav
        a.light(href = "http://blog.jeffreyshen.com") Blog
        a.light(href = "#featured") Featured Work
        a.light(href = "#portfolio") Portfolio
        a.light(href = "http://notes.jeffreyshen.com") Thoughts!
      center
        h1 Hi! I'm Jeffrey
        p I'm a student and programmer at MIT interested in the intersection between computer science, big data, politics, and culture. 
        br
        a.btn(href='mailto:jeffreyshencc@gmail.com') Contact Me
        a.btn.btn-full(href = "https://drive.google.com/open?id=0B6w9AP5vVyo9REVlY0Rqd3BpSzA" target = "_blank") View Resume
      #bottom
        i.caption Scroll for more
        br
        a(href = "https://github.com/jeffreyshen19" target = "_blank" title = "Github")
          i.fa.fa-github.fa-fw
        a(href = "https://www.linkedin.com/in/jeffrey-shen-39576ab1/" target = "_blank" title = "LinkedIn")
          i.fa.fa-fw.fa-linkedin-square
        a(href = "https://twitter.com/jeffreyshen10" target = "_blank" title = "Twitter")
          i.fa.fa-fw.fa-twitter
    #body
      #featured.row.box.scrollbox
        i.fa.icon.fa-fw.fa-star
        h2 FEATURED WORK
        hr
        br
        .projects 
            each project in projects.projects
                if project.featured 
                    .project 
                        .thumb
                            img(src = "/Assets/Graphics/" + project.image)
                        .text 
                            h3= project.title
                            if project.highlight
                                a(href = project.highlight.url target = "_blank")= project.highlight.text
                            p!= project.subtitle
                            p.links
                                each link in project.links
                                    a(href = link.url target = "_blank") 
                                        i(class = "fa fa-fw " + link.icon)
      #portfolio.row.box.scrollbox 
        i.fa.icon.fa-fw.fa-briefcase
        h2 PORTFOLIO
        hr
        br
        .projects
            each category in projects.categories
                .project-header= category.title 
                each project in projects.projects 
                    if project.category == category.id
                        .project 
                            h3= project.title
                            if project.highlight
                                a(href = project.highlight.url target = "_blank")= project.highlight.text
                            p!= project.subtitle
                            p.links
                                each link in project.links
                                    a(href = link.url target = "_blank") 
                                        i(class = "fa fa-fw " + link.icon)
      #books.row.box.scrollbox
        i.fa.fa-fw.icon.fa-book
        h2 BOOKS I'VE RECENTLY READ
        hr
        p I love to read! Here are some books I just finished reading:
        br 
        #loading
          i.fa-2x.fa.fa-spinner.fa-spin
        #books-row
        br
        p Check out my Goodreads profile <a href = "https://www.goodreads.com/user/show/45848993-jeffrey" target = "_blank">here</a>.
